version: "2"
services:
  nginx_test:
    image: nginx:alpine
    container_name: nginx_realforce_test
    volumes:
      - ./logs/nginx:/var/log/nginx
      - ../:/var/www/html
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    ports:
      - "8080:80"
    links:
      - fpm_test
    networks:
      - realforce

  fpm_test:
    image: koshpaevsv/php7.4
    container_name: fpm_realforce_test
    user: 1000:1000
    volumes:
      - ../:/var/www/html
    working_dir: /var/www/html
    expose:
      - 9000
    links:
      - mysql_test
    networks:
      - realforce

  mysql_test:
    image: mysql:8
    container_name: mysql_realforce_test
    command: ["--default-authentication-plugin=mysql_native_password", "--max_allowed_packet=256M"]
    env_file:
      - var_test.env
    environment:
      MYSQL_DATABASE: "realforce"
      MYSQL_USER: "realforce"
    volumes:
      - ./data_test:/var/lib/mysql/
      - ./logs/mysql_test:/var/log/mysql
    ports:
      - "3308:3306"
    networks:
      - realforce

networks:
  realforce:
    external:
      name: realforce

